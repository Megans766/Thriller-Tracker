<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h2><%= park.owner %>'s Adventure</h2>
  <p>At <%= park.park %> my favorite ride was <%= park.ride %></p>
  <% if (user) { %>
    <form 
      action="/parks/<%= park._id %>/likes?_method=PATCH" 
      method="POST"
    >
      <button type="submit">Like this adventure</button>
    </form>
    <% if (park.owner.equals(user?.profile._id)) { %>
      <a href="/parks/<% park._id %>/edit">
        <button>Edit Adventure</button>
      </a>
    <% } %>
    <button>Delete Adventure</button>
  <% } %> 
</section>

<%- include('../partials/footer') %>